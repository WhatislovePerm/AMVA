@*
*@
@{

@model List<CardViewModel>
}


<!doctype html>
<html lang="en" class="bg-dark.bg-gradient">
  <head>
    <title>Inventory</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body>
    <div class="row">
      <span class="col col-3">
        <button type="button" class="btn bg-warning col-10 offset-1 border-5 rounded-pill" value="Выйти"> 
            Выйти
        </button>
      </span>
      <div class="col col-6">
        <form class="bg-warning col-12">
          <div class="text-center">
       
            <h1>Inventory</h1>
          </div>
        </form>
      </div>
      <div class="col col-3">
           <button type="button" class="btn bg-warning col-10 offset-1 border-5 rounded-pill" title="Описание" value="Описание">
              Описание
        </button>
      </div>
    </div>
    <div class="h-20"></div>
      <div class="form-label bg-warning">
        <h2 class="text-center">Карты</h2>
        <p></p>
        <div class="row offset-sm-1">
          @foreach(var card in Model)
          { 
                <span class="card bg-danger border border-5 col-md-2 col @card.CardRarityEnum">
                    <a></a>
                    <span class="row h1"></span>
                    <img src="@card.ImageSource" class="card-img-top row rounded-pill"/>
                    <span class="card-body text-center block row">
                        <span class="card-title text-center text-white col-md-8 offset-2 row">@card.Name</span>
                        <span class="card-text text-md-center text-black col-md-8 offset-2 row">@card.Title</span>
                    </span>
                    <a asp-controller="Inventory" asp-route-cardid="@card.Id" asp-action="SellCard" class="btn btn-dark"> </a>
                </span>
          }
        </div>
        <div class="row offset-sm-1 h1"></div>
        
      </div>
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
